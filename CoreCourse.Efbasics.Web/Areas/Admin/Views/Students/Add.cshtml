@model StudentsAddViewModel
<div class="row">
    <div class="col col-lg-4 mx-auto border border-1">
        <h2>@ViewBag.PageTitle</h2>
        <form asp-area="Admin" asp-controller="Students" asp-action="Add"
              method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="Firstname"></label>
                <input asp-for="Firstname" class="form-control">
                <span asp-validation-for="Firstname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lastname"></label>
                <input asp-for="Lastname" class="form-control">
                <span asp-validation-for="Lastname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control">
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            @* courses checkboxes *@
        <div class="form-group">
            
            @for (int i = 0; i < Model.Courses.Count(); i++)
            {
                <label>@Model.Courses[i].Text</label>
                <input asp-for="@Model.Courses[i].IsSelected" class="form-check-inline">
                <input asp-for="@Model.Courses[i].Value" />
            }


        </div>
            <div class="form-group">
                <label asp-for="Image"></label>
                <input asp-for="Image" class="form-control">
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Add</button>
        </form>
    </div>
</div>


